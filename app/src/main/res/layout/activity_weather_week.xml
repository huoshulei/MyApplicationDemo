<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#164e6c"
    android:orientation="vertical"
    tools:context=".activity.WeatherWeekActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#165d83">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="2016-02-24"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="四月十八"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_date"
            android:layout_marginRight="20dp"
            android:text="星期二"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1aa6f2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="白天"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/iv_image_day"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_weather_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="晴"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/tv_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="温度"
            android:textSize="55sp"/>

        <TextView
            android:id="@+id/tv_direct_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_image_day"
            android:layout_below="@id/iv_image_day"
            android:layout_marginTop="10dp"
            android:text="风向"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_power_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_direct_day"
            android:layout_below="@id/tv_direct_day"
            android:layout_marginTop="5dp"
            android:text="风力"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_sun_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:text="日出"
            android:textSize="20sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#810303"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0c1948">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="夜晚"
            android:textColor="#bbbbbb"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/iv_image_night"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_weather_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="晴"
            android:textColor="#bbbbbb"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/tv_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="温度"
            android:textColor="#bbbbbb"
            android:textSize="55sp"/>

        <TextView
            android:id="@+id/tv_direct_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_image_night"
            android:layout_below="@id/iv_image_night"
            android:layout_marginTop="10dp"
            android:text="风向"
            android:textColor="#bbbbbb"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_power_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_direct_night"
            android:layout_below="@id/tv_direct_night"
            android:layout_marginTop="5dp"
            android:text="风力"
            android:textColor="#bbbbbb"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_sun_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:text="日出"
            android:textColor="#bbbbbb"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>
